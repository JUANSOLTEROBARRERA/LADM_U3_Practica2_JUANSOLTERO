<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTROL DE AUTOMÃ“VILES"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/titulo"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BIG HERO"
        android:textSize="20dp"
        android:layout_below="@+id/titulo"
        android:background="#FF0000"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:id="@+id/titulo2"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACTUALIZAR UN AUTO"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/titulo2"
        android:textColor="#000000"
        android:id="@+id/titulo3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/modelo"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:hint="Modelo"
        android:layout_below="@id/titulo3"
        android:layout_toLeftOf="@+id/marca"
        />
    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/marca"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:hint="Marca"
        android:layout_below="@id/titulo3"
        android:layout_alignParentRight="true"
        />
    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/kilo"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:hint="Kilometraje"
        android:layout_below="@id/marca"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="10dp"
        android:text="ACTUALIZAR"
        android:layout_toRightOf="@+id/kilo"
        android:layout_below="@id/marca"
        android:id="@+id/actualizar"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="REGRESAR"
        android:layout_below="@id/actualizar"
        android:id="@+id/regresar"
        />
</RelativeLayout>